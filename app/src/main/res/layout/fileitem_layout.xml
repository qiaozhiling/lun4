<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/selector_fileitem"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_fileitem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@mipmap/file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_fileitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/image_fileitem"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_fileitem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:button="@drawable/selector_check"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/image_fileitem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/name_fileitem"
        app:layout_constraintTop_toTopOf="@+id/image_fileitem" />

</androidx.constraintlayout.widget.ConstraintLayout>